<?xml version="1.0" encoding="UTF-8"?>
<!--
c3r-web application deployment configuration file.

Define paths to data relative to the web application root directory - e.g. WEB-INF/classes/log4j.properties

-->
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>c3r-web</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>org.unitedstollutions.c3r.messages.C3RWebMessages</param-value>
	</context-param>
	<listener>
		<listener-class>org.unitedstollutions.c3r.listeners.C3RContextListener</listener-class>
	</listener>
	<context-param>
		<param-name>projectIfc</param-name>
		<param-value>defaultIfc.rdf</param-value>
	</context-param>
	<context-param>
		<param-name>projectData</param-name>
		<param-value>data/annotations</param-value>
	</context-param>
	<context-param>
		<param-name>ENGINE_LOG4J</param-name>
		<param-value>WEB-INF/classes/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>PROPERTY_FILE</param-name>
		<param-value>WEB-INF/classes/corese.properties</param-value>
	</context-param>
	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>		
	<servlet>
		<display-name>Dispatcher</display-name>
		<servlet-name>Dispatcher</servlet-name>
		<servlet-class>org.unitedstollutions.c3r.web.Dispatcher</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		C3RFormController</display-name>
		<servlet-name>C3RFormController</servlet-name>
		<servlet-class>
		org.unitedstollutions.c3r.web.C3RFormController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Dispatcher</servlet-name>
		<url-pattern>/checker/main</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Dispatcher</servlet-name>
		<url-pattern>/checker/about</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Dispatcher</servlet-name>
		<url-pattern>/checker/configure</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Dispatcher</servlet-name>
		<url-pattern>/checker/loadProject</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Dispatcher</servlet-name>
		<url-pattern>/checker/date</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Dispatcher</servlet-name>
		<url-pattern>/checker/processQueryGroupConfigurations</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Dispatcher</servlet-name>
		<url-pattern>/checker/queryFinder</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>C3RFormController</servlet-name>
		<url-pattern>/checker/loadProject.form</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>C3RFormController</servlet-name>
		<url-pattern>/checker/runSelectedQueries</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>C3RFormController</servlet-name>
		<url-pattern>/C3RFormController</url-pattern>
	</servlet-mapping>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/jsp/error/erropage.jsp </location>
	</error-page>
	<jsp-config>
		<jsp-property-group>
			<display-name>c3r-web</display-name>
			<url-pattern>/jsp/checker/*</url-pattern>
			<url-pattern>/index.jsp</url-pattern>
			<el-ignored>false</el-ignored>
			<scripting-invalid>false</scripting-invalid>
			<is-xml>false</is-xml>
			<include-prelude>/jsp/template/prelude.jspf</include-prelude>
			<include-prelude>/jsp/template/preludeTagLib.jspf</include-prelude>
			<include-prelude>/jsp/template/preludeErrorPage.jspf</include-prelude>
			<include-coda>/jsp/template/coda.jspf</include-coda>
		</jsp-property-group>
		<jsp-property-group>
			<display-name>c3r-web</display-name>
			<url-pattern>/error/*</url-pattern>
			<el-ignored>false</el-ignored>
			<scripting-invalid>false</scripting-invalid>
			<is-xml>false</is-xml>
			<include-prelude>/template/preludeTagLib.jspf</include-prelude>
			<include-prelude>/template/prelude.jspf</include-prelude>
			<include-coda>/template/coda.jspf</include-coda>
		</jsp-property-group>
	</jsp-config>
</web-app>