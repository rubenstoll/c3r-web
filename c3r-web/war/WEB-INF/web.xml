<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>c3r-web</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>org.unitedstollutions.c3r.messages.C3RWebMessages</param-value>
	</context-param>
	<servlet>
		<servlet-name>c3rapp</servlet-name>
		<servlet-class> org.unitedstollutions.c3r.web.Dispatcher 
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<display-name>rulechecker</display-name>
		<servlet-name>rulechecker</servlet-name>
		<jsp-file>/jsp/checkrules.jsp</jsp-file>
	</servlet>
	<servlet>
		<display-name>date</display-name>
		<servlet-name>date</servlet-name>
		<jsp-file>/jsp/date.jsp</jsp-file>
	</servlet>
	<servlet>
		<display-name>home</display-name>
		<servlet-name>home</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>	<servlet-mapping>
		<servlet-name>c3rapp</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>c3rapp</servlet-name>
		<url-pattern>/justdoit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>rulechecker</servlet-name>
		<url-pattern>/check</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>date</servlet-name>
		<url-pattern>/date</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<jsp-config>
		<jsp-property-group>
			<display-name>c3r-web</display-name>
			<url-pattern>*.jsp</url-pattern>
			<el-ignored>false</el-ignored>
			<scripting-invalid>false</scripting-invalid>
			<is-xml>false</is-xml>
			<include-prelude>/jsp/template/prelude.jspf</include-prelude>
			<include-prelude>/jsp/template/preludeTagLib.jspf</include-prelude>
			<include-prelude>/jsp/template/preludeErrorPage.jspf</include-prelude>
			<include-coda>/jsp/template/coda.jspf</include-coda>
		</jsp-property-group>
	</jsp-config>
</web-app>